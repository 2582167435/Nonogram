{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "curly": "warn",
    "eqeqeq": "warn",
    "no-console": "off",
    "semi": [
      "warn",
      "always"
    ]
  }
}